%Name header
\newcommand\titlename[1]{\hspace*{\fill}{\Large \textbf{#1}}\hspace*{\fill}}

%Time format
\newcommand\mytimeformat[2]{#1{\tiny #2}}

\newcommand\scheduleentry[3]{\mytimeformat{#1}{#2} & #3\\}

\newcommand\scheduleentryspecial[3]{\color{red} \mytimeformat{#1}{#2} &#3\\}

\newcommand\header[2]{\begin{tcolorbox}[oversize, fit to = {\textwidth + 0.09in} and 0.17in, colframe=white, colback={#1!30!white}, top=0.015in, bottom=0.025in, left=0.025in, right=0.025in, arc=0in, nobeforeafter, boxsep=0in, fit fontsize macros, valign=center]
{\textsc{\large #2}} \end{tcolorbox}}

\newcommand\stickertitle[1]{
\begin{tcolorbox}[fit to = {\textwidth} and 0.20in, blank, nobeforeafter, boxsep=0in, fit fontsize macros, halign=center] 
 { {\Large \textbf{#1} } }
\end{tcolorbox}
}

